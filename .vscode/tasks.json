{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run G++",
            "command": "g++",
            "args": [
                "-g",
                "tree-top-view.cpp"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run File",
            "command": "python ${file}",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "nosetest",
            "command": "nosetests -v",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            }
        }
    ]
}